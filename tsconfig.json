{
  "compilerOptions": {
    "jsx": "react-jsx", // ✅ Required for React 17+
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["react"] // ✅ This line ensures React types are included
  },
  "include": ["src"]
}
